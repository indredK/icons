{
  "name": "indredk",
  "version": "10.0.1",
  "private": true,
  "description": "星纵图标库demo",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "bootstrap": "lerna bootstrap 这个命令将来会被弃用的",
    "install": "lerna run install",
    "install-svg": "lerna run install  @indredk/icons-svg",
    "install-react": "lerna run install  @indredk/icons",
    "install-react-native": "lerna run install   @indredk/icons-react-native",
    "publish:ci": "lerna version --no-private ",
    "publish:ci1": "lerna  publish ",
    
    "clean": "lerna clean",
    "rn:generate": "lerna run --scope @indredk/icons-react-native generate",
    "icons:generate": "lerna run --scope @indredk/icons-svg generate",
    "icons:build": "lerna run --scope @indredk/icons-svg build",
    "icons:test": "lerna run --scope @indredk/icons-svg test",
    "react:ci": "lerna run --scope @indredk/icons ci",
    "angular:ci": "lerna run --scope @indredk/icons-angular-workspace ci",
    "vue:ci": "lerna run --scope @indredk/icons-vue ci",
    "react-native:ci": "lerna run --scope @indredk/icons-react-native ci",
    "lint-ant": "lerna run lint",
    "start": "npm run dev",
    "dev": "dumi dev",
    "build": "father build",
    "build:watch": "father dev",
    "docs:build": "dumi build",
    "prepare": "husky install && dumi setup",
    "doctor": "father doctor",
    "lint": "npm run lint:es && npm run lint:css",
    "lint:css": "stylelint \"{src,test}/**/*.{css,less}\"",
    "lint:es": "eslint \"{src,test}/**/*.{js,jsx,ts,tsx}\"",
    "prepublishOnly": "father doctor && npm run build",
    "importSvg": "tsx importSvg.ts"
  },
  "authors": [
    "Kindred"
  ],
  "license": "MIT",
  "files": [
    "dist"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.{md,json}": [
      "prettier --write --no-error-on-unmatched-pattern"
    ],
    "*.{css,less}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --parser=typescript --write"
    ]
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=16.9.0",
    "react-dom": ">=16.9.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@types/lodash.camelcase": "^4.3.6",
    "@types/lodash.template": "^4.4.6",
    "@types/lodash.upperfirst": "^4.3.6",
    "@types/react": "^18.2.7",
    "@types/react-dom": "^18.0.0",
    "@umijs/lint": "^4.0.0",
    "antd": "^5.5.2",
    "dumi": "^2.2.0",
    "eslint": "^8.23.0",
    "father": "^4.1.0",
    "husky": "^8.0.1",
    "lerna": "^6.6.2",
    "lint-staged": "^13.0.3",
    "lodash.camelcase": "^4.3.0",
    "lodash.template": "^4.5.0",
    "lodash.upperfirst": "^4.3.1",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.0.0",
    "prettier-plugin-packagejson": "^2.2.18",
    "react": "^18.3.0-next-fecc288b7-20221025",
    "react-dom": "^18.0.0",
    "styled-components": "^3.3.3",
    "stylelint": "^14.9.1"
  },
  "dependencies": {
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.2.0-dev.20230530"
  }
}